{
  "name": "arena",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "yarn cleanup && yarn compile && mkdir -p builds && rojo build --output builds/lobby.rbxlx rojo.project.json",
    "cleanup": "yarn lint && yarn format",
    "compile": "rbxtsc",
    "connect-io": "npx io-serve",
    "dev": "yarn build && yarn shortcircuitdev",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "serve": "rojo serve rojo.project.json",
    "shortcircuitdev": "concurrently -k 'yarn watch' 'yarn serve' 'yarn connect-io'",
    "watch": "rbxtsc -w"
  },
  "devDependencies": {
    "@rbxts/compiler-types": "^2.1.1-types.0",
    "@rbxts/types": "^1.0.677",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-roblox-ts": "^0.0.35",
    "prettier": "^3.0.0",
    "roblox-ts": "^2.1.0"
  },
  "dependencies": {
    "@rbxts/knit": "^0.0.21-alpha.0",
    "@rbxts/services": "^1.5.1",
    "assets": "1.0.0",
    "concurrently": "^8.0.1"
  }
}
